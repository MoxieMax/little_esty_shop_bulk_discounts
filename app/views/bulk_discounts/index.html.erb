<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Bulk Discounts', merchant_bulk_discounts_path, class: 'link_1', style: 'pull-right' %>
    </ul>
  </nav>
</div>

<body>
  
  <div class="row">
    <h2 class='mr-auto col-12'>Upcoming Holidays</h2>
    <% @holidays.each do |holiday| %>
    <p class="col"></p>
        <h3><%= holiday.name %></h3>
        <p><%= holiday.date %></p>
        <% end %>
  </div>
  
  <div class="row">
    <h2 class='mr-auto col-12'>All Discounts</h2>
  </div>

  <div class='mr-auto col-11'>
    <% @merchant.bulk_discounts.each do |discount| %>
    <div id="discount-<%= discount.id %>"
      <ul><%= link_to "Discount #{discount.id}", merchant_bulk_discount_path(@merchant, discount)%>
        <li>Discount Percentage:
          <%= discount.discount_percentage %>%</li>
        <li>Quantity Threshold:
          <%= discount.quantity_threshold %></li>
          <li><%= link_to "Delete Discount #{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :delete %></li>
          <br>
      </ul>
    </div>
    <% end %>
  </div>
  
  <div class="row">
    <p class='mr-auto col-10'>
      <%= link_to "Create Discount", new_merchant_bulk_discount_path(@merchant), method: :get %></p>
  </div>
</body>